<html>

<head>
  <%- include('partials/head.ejs') %>

  <style>
    #home-heading {
      /* padding: 32px 64px; */
      text-align: center;
      margin-bottom: 64px;
    }
    #games-form {
      display: flex;
      flex-direction: column;
      gap: 16px;
      align-items: center;
    }
    #game-list {
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      gap: 16px;
    }
    #game-list li{
      display: block;
    }
  </style>
</head>

<body>
  <%- include('partials/authenticated-nav.ejs') %>
  <h1 id="home-heading">Welcome to Monopoly, <%= user.username %>!</h1>
  <!-- Debugging purposes -->
  <h3  id="home-heading" style="text-align: center; margin-top: -4%;">(user_id: <%= user.id %>)</h3>
    <div class="container">
      <div class="row">
        <div class="col-sm">
          <form id="games-form" method="get" action="/api/games/create">
            <!-- Button elem might cause issues with chat msg submission -->
            <button type="submit" class="primary-button" value="Create Game">Create Game</button>
            <!-- <a href="/api/games/create" id="create-game-link" class="primary-button">Create Game</a> -->
            <h2>Available Games</h2>
            <ul id="game-list">
              <% for(let i=0; i < games.length; i++) { %>
                <li>
                  <a href="/api/games/<%= games[i].id %>/join">Join <span>
                      <%= games[i].id %>
                    </span></a>
                </li>
                <% } %>
            </ul>
          </form> 
        </div>
      </div>
    </div>
    <template id="available-game-item">
      <div>
        <li>
          <a href="#">Join <span>42</span></a>
        </li>
      </div>
    </template>
</body>

</html>